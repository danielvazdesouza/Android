<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <CheckBox
        android:id="@+id/checkLuz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textTitulo"
        android:tag="100"
        android:text="Luz (100,00)" />

    <CheckBox
        android:id="@+id/checkAgua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkLuz"
        android:layout_below="@+id/checkLuz"
        android:tag="50"
        android:text="Água (50,00)" />

    <CheckBox
        android:id="@+id/checkTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkAgua"
        android:layout_below="@+id/checkAgua"
        android:tag="120"
        android:text="Telefone (120,00)" />

    <CheckBox
        android:id="@+id/checkCelular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkTelefone"
        android:layout_below="@+id/checkTelefone"
        android:tag="50"
        android:text="Celular (50,00)" />

    <Button
        android:id="@+id/botaoPagar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkCelular"
        android:layout_below="@+id/checkCelular"
        android:text="Pagar" />

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Selecione as Contas"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>